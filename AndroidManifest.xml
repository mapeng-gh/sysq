<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.huasheng.sysq"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="19"
        android:targetSdkVersion="19" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" 
        android:name="com.huasheng.sysq.util.MyApplication">
        
        <!-- login -->
        <activity
            android:name="com.huasheng.sysq.activity.LoginActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <!-- index -->
        <activity android:name=".activity.IndexActivity"></activity>
        
        <!-- reservation -->
         <activity android:name=".activity.reservation.ReservationAddActivity"></activity>
         <activity 
             android:name=".activity.reservation.ReservationListActivity"
             android:screenOrientation="landscape">
         </activity>
         
         <!-- interview -->
         <activity android:name=".activity.interview.InterviewerBasicActivity"></activity>
         <activity android:name=".activity.interview.InterviewerDNAActivity"></activity>
        
    </application>

</manifest>
