<?xml version="1.0" encoding="utf-8"?>
<resources>
    
    <style name="interview_layout">
        <item name="android:layout_height">87dp</item>
    </style>
    <style name="interview_label">
        <item name="android:layout_width">200dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>
    <style name="interview_edittext">
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_width">250dp</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:background">@drawable/edittext_border</item>
        <item name="android:layout_marginLeft">15dp</item>
    </style>
    <style name="interview_hint">
        <item name="android:layout_width">150dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:textColor">#FF0000</item>
        <item name="android:textSize">15sp</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>
    
</resources>
