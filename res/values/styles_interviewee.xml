<?xml version="1.0" encoding="utf-8"?>
<resources>
    
    <!-- interviewee list -->
    <style name="interviewee_list_head">
        <item name="android:textSize">20sp</item>
        <item name="android:background">#338EE7</item>
	     <item name="android:textColor">#FFFFFF</item>
	     <item name="android:gravity">center</item>
	     <item name="android:paddingTop">5dp</item>
	     <item name="android:paddingBottom">5dp</item>
    </style>
    
    <style name="interviewee_list_body">
        <item name="android:textSize">20sp</item>
	     <item name="android:gravity">center</item>
    </style>
    
    <!-- interviewee questionaire basic -->
    <style name="interviewee_questionaire_basic_layout">
        <item name="android:layout_height">100dp</item>
    </style>
    <style name="interviewee_questionaire_basic_label">
        <item name="android:layout_width">200dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>
    <style name="interviewee_questionaire_basic_edittext">
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_width">250dp</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:background">@drawable/edittext_border</item>
        <item name="android:layout_marginLeft">15dp</item>
    </style>
    <style name="interviewee_questionaire_basic_hint">
        <item name="android:layout_width">150dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:textColor">#FF0000</item>
        <item name="android:textSize">15sp</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>
    
    <!-- interviewee questionaire dna -->
     <style name="interviewee_questionaire_dna_layout">
       <item name="android:layout_height">100dp</item>
    </style>
    <style name="interviewee_person_dna_label">
        <item name="android:layout_width">120dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>
    <style name="interviewee_person_dna_edittext">
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_width">300dp</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:background">@drawable/edittext_border</item>
        <item name="android:singleLine">true</item>
        <item name="android:editable">false</item>
    </style>
    <style name="interviewee_person_dna_imagebtn">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">50dp</item>
        <item name="android:src">@drawable/interview_dna_scan</item>
        <item name="android:background">#00000000</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>
    
    <!-- interview questionaire list -->
    <style name="interviewee_questionaire_list_head">
         <item name="android:textSize">20sp</item>
         <item name="android:background">#338EE7</item>
	     <item name="android:textColor">#FFFFFF</item>
	     <item name="android:gravity">center</item>
	     <item name="android:paddingTop">5dp</item>
	     <item name="android:paddingBottom">5dp</item>
	     <item name="android:layout_width">0dp</item>
	     <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="interviewee_questionaire_list_body">
        <item name="android:textSize">20sp</item>
	    <item name="android:gravity">center</item>
	    <item name="android:layout_width">0dp</item>
	    <item name="android:layout_height">match_parent</item>
    </style>
    
    <!-- interviewee answers lhc -->
    <style name="interviewee_answers_lhc_cell">
        <item name="android:textSize">18sp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
    </style>
    
</resources>
