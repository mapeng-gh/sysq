<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
    
    <style name="ftp_form_item_layout">
        <item name="android:layout_marginBottom">50dp</item>
    </style>
    
    <style name="ftp_form_item_label">
        <item name="android:layout_width">170dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>
    <style name="ftp_form_item_edittext">
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_width">250dp</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:background">@drawable/edittext_border</item>
    </style>
    <style name="ftp_form_item_hint">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:textColor">#FF0000</item>
        <item name="android:textSize">15sp</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>
    
</resources>
