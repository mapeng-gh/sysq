<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <!--  标题 -->
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="150dp">
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="个人中心"
            android:textColor="#0096DC"
            android:textSize="40sp"/>
    </RelativeLayout>
    
    <!-- 第一行 -->
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="200dp">
        
        <LinearLayout 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="horizontal">
            
            	<!-- 个人信息 -->
            	<LinearLayout 
	                android:id="@+id/usercenter_navy_basicLL"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:orientation="vertical">
                
	                 <ImageView 
	            	    android:layout_width="wrap_content"
	            	    android:layout_height="wrap_content"
	            	    android:layout_gravity="center_horizontal"
	            	    android:src="@drawable/usercenter_basic"/>
                    
                	<TextView 
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:layout_gravity="center_horizontal"
	                    android:text="个人信息"
	                    android:textSize="20sp"/>
                
            </LinearLayout>
            
            <!-- 修改密码 -->
            	<LinearLayout 
	                android:id="@+id/usercenter_navy_passwordLL"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:orientation="vertical"
	                android:layout_marginLeft="150dp">
                
	                 <ImageView 
	            	    android:layout_width="wrap_content"
	            	    android:layout_height="wrap_content"
	            	    android:layout_gravity="center_horizontal"
	            	    android:src="@drawable/usercenter_password"/>
                    
                	<TextView 
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:layout_gravity="center_horizontal"
	                    android:text="修改密码"
	                    android:textSize="20sp"/>
                
            </LinearLayout>
            
            <!-- 退出系统 -->
            <LinearLayout 
	                android:id="@+id/usercenter_navy_logoutLL"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:orientation="vertical"
	                android:layout_marginLeft="150dp">
                
	                 <ImageView 
	            	    android:layout_width="wrap_content"
	            	    android:layout_height="wrap_content"
	            	    android:layout_gravity="center_horizontal"
	            	    android:src="@drawable/usercenter_logout"/>
                    
                	<TextView 
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:layout_gravity="center_horizontal"
	                    android:text="退出系统"
	                    android:textSize="20sp"/>
            </LinearLayout>
            
            <!-- 关于 -->
            <LinearLayout 
	                android:id="@+id/usercenter_navy_aboutLL"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:orientation="vertical"
	                android:layout_marginLeft="150dp">
                
	                 <ImageView 
	            	    android:layout_width="wrap_content"
	            	    android:layout_height="wrap_content"
	            	    android:layout_gravity="center_horizontal"
	            	    android:src="@drawable/usercenter_about"/>
                    
                	<TextView 
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:layout_gravity="center_horizontal"
	                    android:text="关于"
	                    android:textSize="20sp"/>
            </LinearLayout>
                
        </LinearLayout>
        
    </RelativeLayout>

</LinearLayout>
