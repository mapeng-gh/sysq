<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="50dp"
    android:orientation="vertical" >
    
    <LinearLayout 
        android:id="@+id/usercenter_layout_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
	    android:orientation="vertical">
    </LinearLayout>
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical">
        
        <LinearLayout 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">
            
            <LinearLayout 
                android:id="@+id/ll_usercenter_userinfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="100dp"
                android:orientation="vertical">
                
                <ImageView 
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/usercenter_userinfo"
                    android:layout_gravity="center_horizontal"/>
                <TextView 
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/usercenter_userinfo"
                    android:layout_gravity="center_horizontal"
                    android:textSize="20sp"/>
                
            </LinearLayout>
            
            <LinearLayout 
                android:id="@+id/ll_usercenter_modify_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="100dp"
                android:orientation="vertical">
                
                <ImageView 
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/usercenter_modify_password"
                    android:layout_gravity="center_horizontal"/>
                <TextView 
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/usercenter_modify_password"
                    android:layout_gravity="center_horizontal"
                    android:textSize="20sp"/>
                
            </LinearLayout>
            
            <LinearLayout 
                android:id="@+id/ll_usercenter_new_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="100dp"
                android:orientation="vertical">
                
                <ImageView 
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/usercenter_new_user"
                    android:layout_gravity="center_horizontal"/>
                <TextView 
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/usercenter_new_user"
                    android:layout_gravity="center_horizontal"
                    android:textSize="20sp"/>
                
            </LinearLayout>
            
            <LinearLayout 
                android:id="@+id/ll_usercenter_logout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="100dp"
                android:orientation="vertical">
                
                <ImageView 
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/usercenter_logout"
                    android:layout_gravity="center_horizontal"/>
                <TextView 
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/usercenter_logout"
                    android:layout_gravity="center_horizontal"
                    android:textSize="20sp"/>
                
            </LinearLayout>
            
        </LinearLayout>
        
    </LinearLayout>

</LinearLayout>
