<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
   <!-- 标题 -->
   <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="130dp">
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="个人信息"
            android:textColor="#0096DC"
            android:textSize="40sp"/>
    </RelativeLayout>
    
   <!-- 表单：手机号码  -->
    <RelativeLayout 
        android:layout_width="match_parent"
        style="@style/usercenter_basic_layout">
        
        <LinearLayout 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="horizontal">
            
            <TextView 
		           style="@style/usercenter_basic_label"
		           android:text="手机号码："/>
		       <EditText 
		           android:id="@+id/usercenter_basic_mobile_et"
		           style="@style/usercenter_basic_edittext"/>
		       <TextView 
		           style="@style/usercenter_basic_hint"
		           android:text="*"/>
            
        </LinearLayout>
        
    </RelativeLayout>
    
    <!-- 表单：姓名 -->
    <RelativeLayout 
        android:layout_width="match_parent"
        style="@style/usercenter_basic_layout">
        
        <LinearLayout 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="horizontal">
            
            <TextView 
		           style="@style/usercenter_basic_label"
		           android:text="姓名："/>
		       <EditText 
		           android:id="@+id/usercenter_basic_username_et"
		           style="@style/usercenter_basic_edittext"/>
		       <TextView 
		           style="@style/usercenter_basic_hint"
		           android:text="*"/>
            
        </LinearLayout>
        
    </RelativeLayout>
    
    <!-- 表单：电子邮箱 -->
    <RelativeLayout 
        android:layout_width="match_parent"
        style="@style/usercenter_basic_layout">
        
        <LinearLayout 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="horizontal">
            
            <TextView 
		           style="@style/usercenter_basic_label"
		           android:text="电子邮箱："/>
		       <EditText 
		           android:id="@+id/usercenter_basic_email_et"
		           style="@style/usercenter_basic_edittext"/>
		       <TextView 
		           style="@style/usercenter_basic_hint"
		           android:text="*"/>
            
        </LinearLayout>
        
    </RelativeLayout>
    
    <!-- 表单：工作单位 -->
    <RelativeLayout 
        android:layout_width="match_parent"
        style="@style/usercenter_basic_layout">
        
        <LinearLayout 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="horizontal">
            
            <TextView 
		           style="@style/usercenter_basic_label"
		           android:text="工作单位："/>
		       <EditText 
		           android:id="@+id/usercenter_basic_workingplace_et"
		           style="@style/usercenter_basic_edittext"/>
		       <TextView 
		           style="@style/usercenter_basic_hint"
		           android:text="*"/>
            
        </LinearLayout>
        
    </RelativeLayout>
    
    <!-- 表单：保存 -->
    <RelativeLayout 
        android:layout_width="match_parent"
        style="@style/usercenter_basic_layout">
        
        <Button
	            android:id="@+id/usercenter_basic_submit_btn"
	            android:layout_width="350dp"
	            android:layout_height="wrap_content"
	            android:layout_centerInParent="true"
	            android:text="修改"
	            android:background="#0096DC"
	            android:textColor="#FFFFFF"
	            android:textSize="25sp"
	            android:layout_gravity="center_horizontal"/>
        
    </RelativeLayout>

</LinearLayout>
