<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        
        <LinearLayout 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_gravity="center_horizontal"
	        android:orientation="vertical">
	        
		   <LinearLayout 
		       style="@style/interviewee_questionaire_basic_layout">
		       
		       <TextView 
		           style="@style/interviewee_questionaire_basic_label"
		           android:text="@string/interviewee_questionaire_basic_username_label"/>
		       <EditText 
		           android:id="@+id/et_interviewee_questionaire_basic_username"
		           style="@style/interviewee_questionaire_basic_edittext"/>
		       <TextView 
		           style="@style/interviewee_questionaire_basic_hint"
		           android:text="@string/interviewee_questionaire_basic_username_hint"/>
		       
		   </LinearLayout>
		   
		   <LinearLayout 
		       style="@style/interviewee_questionaire_basic_layout">
		       
		       <TextView 
		           style="@style/interviewee_questionaire_basic_label"
		           android:text="@string/interviewee_questionaire_basic_identity_card_label"/>
		       <EditText 
		           android:id="@+id/et_interviewee_questionaire_basic_identity_card"
		           style="@style/interviewee_questionaire_basic_edittext"/>
		       <TextView 
		           style="@style/interviewee_questionaire_basic_hint"
		           android:text="@string/interviewee_questionaire_basic_identity_card_hint"/>
		       
		   </LinearLayout>
		   
		   <LinearLayout 
		       style="@style/interviewee_questionaire_basic_layout">
		       
		       <TextView 
		           style="@style/interviewee_questionaire_basic_label"
		           android:text="@string/interviewee_questionaire_basic_province_label"/>
		       <EditText 
		           android:id="@+id/et_interviewee_questionaire_basic_province"
		           style="@style/interviewee_questionaire_basic_edittext"/>
		       
		   </LinearLayout>
		   
		   <LinearLayout 
		       style="@style/interviewee_questionaire_basic_layout">
		       
		       <TextView 
		           style="@style/interviewee_questionaire_basic_label"
		           android:text="@string/interviewee_questionaire_basic_city_label"/>
		       <EditText 
		           android:id="@+id/et_interviewee_questionaire_basic_city"
		           style="@style/interviewee_questionaire_basic_edittext"/>
		       <TextView 
		           style="@style/interviewee_questionaire_basic_hint"
		           android:text="@string/interviewee_questionaire_basic_city_hint"/>
		       
		   </LinearLayout>
		   
		   <LinearLayout 
		       style="@style/interviewee_questionaire_basic_layout">
		       
		       <TextView 
		           style="@style/interviewee_questionaire_basic_label"
		           android:text="@string/interviewee_questionaire_basic_address_label"/>
		       <EditText 
		           android:id="@+id/et_interviewee_questionaire_basic_address"
		           style="@style/interviewee_questionaire_basic_edittext"/>
		       <TextView 
		           style="@style/interviewee_questionaire_basic_hint"
		           android:text="@string/interviewee_questionaire_basic_address_hint"/>
		       
		   </LinearLayout>
		   
		   <LinearLayout 
		       style="@style/interviewee_questionaire_basic_layout">
		       
		       <TextView 
		           style="@style/interviewee_questionaire_basic_label"
		           android:text="@string/interviewee_questionaire_basic_post_code_label"/>
		       <EditText 
		           android:id="@+id/et_interviewee_questionaire_basic_post_code"
		           style="@style/interviewee_questionaire_basic_edittext"/>
		       <TextView 
		           style="@style/interviewee_questionaire_basic_hint"
		           android:text="@string/interviewee_questionaire_basic_post_code_hint"/>
		       
		   </LinearLayout>
		   
		   <LinearLayout 
		       style="@style/interviewee_questionaire_basic_layout">
		       
		       <TextView 
		           style="@style/interviewee_questionaire_basic_label"
		           android:text="@string/interviewee_questionaire_basic_mobile_label"/>
		       <EditText 
		           android:id="@+id/et_interviewee_questionaire_basic_mobile"
		           style="@style/interviewee_questionaire_basic_edittext"/>
		       <TextView 
		           style="@style/interviewee_questionaire_basic_hint"
		           android:text="@string/interviewee_questionaire_basic_mobile_hint"/>
		       
		   </LinearLayout>
		   
		   <LinearLayout 
		       style="@style/interviewee_questionaire_basic_layout">
		       
		       <TextView 
		           style="@style/interviewee_questionaire_basic_label"
		           android:text="@string/interviewee_questionaire_basic_family_address_label"/>
		       <EditText 
		           android:id="@+id/et_interviewee_questionaire_basic_family_address"
		           style="@style/interviewee_questionaire_basic_edittext"/>
		       
		   </LinearLayout>
		   
		   <LinearLayout 
		       style="@style/interviewee_questionaire_basic_layout">
		       
		       <TextView 
		           style="@style/interviewee_questionaire_basic_label"
		           android:text="@string/interviewee_questionaire_basic_family_mobile_label"/>
		       <EditText 
		           android:id="@+id/et_interviewee_questionaire_basic_family_mobile"
		           style="@style/interviewee_questionaire_basic_edittext"/>
		       
		   </LinearLayout>
		   
		   <LinearLayout 
		       style="@style/interviewee_questionaire_basic_layout">
		       
		       <TextView 
		           style="@style/interviewee_questionaire_basic_label"
		           android:text="@string/interviewee_questionaire_basic_remark_label"/>
		       <EditText 
	               android:id="@+id/et_interviewee_questionaire_basic_remark"
	               android:layout_width="350dp"
	               android:layout_height="wrap_content"
	               android:background="@drawable/edittext_border"
	               android:layout_gravity="center_vertical"
	               android:inputType="textMultiLine"
	               android:minLines="4"
	               android:gravity="top|left"
	               android:padding="10dp"/>
		       
		        <TextView 
		           style="@style/interviewee_questionaire_basic_hint"
		           android:text="@string/interviewee_questionaire_basic_remark_hint"/>
		       
		   </LinearLayout>
		   
		   <LinearLayout 
		       android:layout_width="match_parent"
		       android:layout_height="wrap_content"
		       android:layout_marginTop="30dp"
		       android:orientation="vertical">
		       
		        <Button
		            android:id="@+id/btn_interviewee_questionaire_basic_submit"
		            android:layout_width="350dp"
		            android:layout_height="wrap_content"
		            android:text="@string/interviewee_questionaire_basic_submit"
		            android:background="#0096DC"
		            android:textColor="#FFFFFF"
		            android:textSize="25sp"
		            android:layout_gravity="center_horizontal"/>
		       
		   </LinearLayout>
	        
	  	</LinearLayout>
        
    </LinearLayout>
    
	    
 </ScrollView>

