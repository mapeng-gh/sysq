<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="70dp"
    android:orientation="vertical" 
    android:background="#FFF">
    
        <LinearLayout 
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_gravity="center_horizontal"
           android:orientation="horizontal"
           android:layout_marginBottom="40dp">
           
           <TextView 
	           	android:layout_height="wrap_content"
	           	android:text="@string/reservation_add_username_text"
	           	style="@style/reservation_add_label"
	           	android:layout_gravity="center_vertical"/>
           <EditText 
               android:id="@+id/reservation_add_username"
               style="@style/reservation_add_edittext"
               android:background="@drawable/edittext_border"
               android:layout_gravity="center_vertical"/>
           <TextView 
	           	android:layout_height="wrap_content"
	           	android:text="@string/reservation_add_username_hint"
	           	style="@style/reservation_add_hint"
	           	android:layout_gravity="center_vertical"/>
           
      	</LinearLayout>
          
      
          <LinearLayout 
	           android:layout_width="wrap_content"
	           android:layout_height="wrap_content"
	           android:layout_gravity="center_horizontal"
	           android:orientation="horizontal"
	           android:layout_marginBottom="40dp">
          
	           <TextView 
		           	android:layout_height="wrap_content"
		           	android:text="@string/reservation_add_identity_card_text"
		           	style="@style/reservation_add_label"
		           	android:layout_gravity="center_vertical"/>
	           <EditText 
	               android:id="@+id/reservation_add_identity_card"
	              	style="@style/reservation_add_edittext"
	               android:background="@drawable/edittext_border"
	               android:layout_gravity="center_vertical"/>
	           <TextView 
		           	android:layout_height="wrap_content"
		           	android:text="@string/reservation_add_identity_card_hint"
		           	style="@style/reservation_add_hint"
		           	android:layout_gravity="center_vertical"/>
	           
          </LinearLayout>
          
         <LinearLayout 
	           android:layout_width="wrap_content"
	           android:layout_height="wrap_content"
	           android:layout_gravity="center_horizontal"
	           android:orientation="horizontal"
	           android:layout_marginBottom="40dp">
           
	           <TextView 
		           	android:layout_height="wrap_content"
		           	android:text="@string/reservation_add_mobile_text"
		           	style="@style/reservation_add_label"
		           	android:layout_gravity="center_vertical"/>
	           <EditText 
	               android:id="@+id/reservation_add_mobile"
	             	style="@style/reservation_add_edittext"
	               android:background="@drawable/edittext_border"
	               android:layout_gravity="center_vertical"/>
	           <TextView 
		           	android:layout_height="wrap_content"
		           	android:text="@string/reservation_add_mobile_hint"
		           	style="@style/reservation_add_hint"
		           	android:layout_gravity="center_vertical"/>
          
          </LinearLayout>
          
          <LinearLayout 
	           android:layout_width="wrap_content"
	           android:layout_height="wrap_content"
	           android:layout_gravity="center_horizontal"
	           android:orientation="horizontal"
	           android:layout_marginBottom="40dp">
          
	           <TextView 
		           	android:layout_height="wrap_content"
		           	android:text="@string/reservation_add_family_mobile_text"
		           	style="@style/reservation_add_label"
		           	android:layout_gravity="center_vertical"/>
	           <EditText 
	               android:id="@+id/reservation_add_family_mobile"
	              	style="@style/reservation_add_edittext"
	               android:background="@drawable/edittext_border"
	               android:layout_gravity="center_vertical"/>
	           <TextView 
		           	android:layout_height="wrap_content"
		           	android:text="@string/reservation_add_family_mobile_hint"
		           	style="@style/reservation_add_hint"
		           	android:layout_gravity="center_vertical"/>
           
          </LinearLayout>
          
          <LinearLayout 
	           android:layout_width="wrap_content"
	           android:layout_height="wrap_content"
	           android:layout_gravity="center_horizontal"
	           android:orientation="horizontal"
	           android:layout_marginBottom="40dp">
          
	           <TextView 
		           	android:layout_height="wrap_content"
		           	android:text="@string/reservation_add_type_text"
		           	android:layout_gravity="center_vertical"
		           	style="@style/reservation_add_label"/>
	           
	           <RadioGroup 
	               android:layout_width="270dp"
	               android:layout_height="wrap_content"
	               android:orientation="horizontal"
	               android:layout_gravity="center_vertical">
	               
	               <RadioButton 
	                   android:id="@+id/reservation_add_type_case"
	                   android:layout_width="wrap_content"
	                   android:layout_height="wrap_content"
	                   android:checked="true"
	                   android:text="@string/reservation_add_type_case_text"/>
	               <RadioButton 
	                   android:id="@+id/reservation_add_type_contrast"
	                   android:layout_width="wrap_content"
	                   android:layout_height="wrap_content"
	                   android:text="@string/reservation_add_type_contrast_text"
	                   android:layout_marginLeft="15dp"/>
	               
	           </RadioGroup>
	           
	           <TextView 
		           	android:layout_height="wrap_content"
		           	style="@style/reservation_add_hint"
		           	android:layout_gravity="center_vertical"/>
          
          </LinearLayout>
          
          <LinearLayout 
	           android:layout_width="wrap_content"
	           android:layout_height="wrap_content"
	           android:layout_gravity="center_horizontal"
	           android:orientation="horizontal"
	           android:layout_marginBottom="70dp">
          
	           <TextView 
		           	android:layout_height="wrap_content"
		           	android:text="@string/reservation_add_book_date_text"
		           	android:layout_gravity="center_vertical"
		           	style="@style/reservation_add_label"/>
	           
	           <EditText 
	               android:id="@+id/reservation_add_book_date_et"
	               style="@style/reservation_add_edittext"
	               android:background="@drawable/edittext_border"
	               android:layout_gravity="center_vertical"
	               android:editable="false"/>
	           
	           <TextView 
	               android:id="@+id/reservation_add_select_date_btn"
	               android:layout_width="200dp"
	               android:layout_height="wrap_content"
	               android:layout_marginLeft="80dp"
	               android:layout_gravity="center_vertical"
	               android:text="选择"
	                android:textColor="#338EE7"
	                android:textSize="17sp"/>
           
          </LinearLayout>
          
         <Button 
             android:id="@+id/reservation_add_submit"
             android:layout_width="350dp"
             android:layout_height="wrap_content"
             android:layout_gravity="center_horizontal"
             android:text="@string/reservation_add_submit_text"
             android:background="#0096DC"
             android:textColor="#FFFFFF"
             android:textSize="25sp"/>
        
</LinearLayout>
