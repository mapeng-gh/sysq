<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
   <!-- 标题 -->
   <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="130dp">
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="访谈信息"
            android:textColor="#0096DC"
            android:textSize="40sp"/>
    </RelativeLayout>
    
   <!-- 表单：编号 -->
    <RelativeLayout 
        android:layout_width="match_parent"
        style="@style/settings_repaire_intervieweedetail_layout">
        
        <LinearLayout 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="horizontal">
            
            <TextView 
		           style="@style/settings_repaire_intervieweedetail_label"
		           android:text="编号："/>
		       <TextView 
		           android:id="@+id/settings_repaire_intervieweedetail_id_tv"
		           style="@style/settings_repaire_intervieweedetail_content"/>
            
        </LinearLayout>
        
    </RelativeLayout>
    
    <!-- 表单：姓名 -->
    <RelativeLayout 
        android:layout_width="match_parent"
        style="@style/settings_repaire_intervieweedetail_layout">
        
        <LinearLayout 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="horizontal">
            
            <TextView 
		           style="@style/settings_repaire_intervieweedetail_label"
		           android:text="姓名："/>
		       <TextView 
		           android:id="@+id/settings_repaire_intervieweedetail_name_tv"
		           style="@style/settings_repaire_intervieweedetail_content"/>
            
        </LinearLayout>
        
    </RelativeLayout>
    
    <!-- 表单：医生 -->
    <RelativeLayout 
        android:layout_width="match_parent"
        style="@style/settings_repaire_intervieweedetail_layout">
        
        <LinearLayout 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="horizontal">
            
            <TextView 
		           style="@style/settings_repaire_intervieweedetail_label"
		           android:text="医生："/>
		       <Spinner 
		           android:id="@+id/settings_repaire_intervieweedetail_docker_spin"
		           style="@style/settings_repaire_intervieweedetail_content"
		           android:spinnerMode="dialog"/>
            
        </LinearLayout>
        
    </RelativeLayout>
    
    <!-- 表单：保存 -->
    <RelativeLayout 
        android:layout_width="match_parent"
        style="@style/settings_repaire_intervieweedetail_layout">
        
        <Button
	            android:id="@+id/settings_repaire_intervieweedetail_submit_btn"
	            android:layout_width="350dp"
	            android:layout_height="wrap_content"
	            android:layout_centerInParent="true"
	            android:text="保存"
	            android:background="#0096DC"
	            android:textColor="#FFFFFF"
	            android:textSize="25sp"
	            android:layout_gravity="center_horizontal"/>
        
    </RelativeLayout>

</LinearLayout>
