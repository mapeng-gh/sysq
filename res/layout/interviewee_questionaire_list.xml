<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        
	    <TextView 
	        style="@style/interviewee_questionaire_list_head"
	        android:layout_weight="@string/interviewee_questionaire_list_head_title_weight"
	        android:text="@string/interviewee_questionaire_list_head_title_label"/>
	    
	    <TextView 
	        style="@style/interviewee_questionaire_list_head"
	        android:layout_weight="@string/interviewee_questionaire_list_head_status_weight"
	        android:text="@string/interviewee_questionaire_list_head_status_label"/>
	    
	    <TextView 
	        style="@style/interviewee_questionaire_list_head"
	        android:layout_weight="@string/interviewee_questionaire_list_head_last_modified_time_weight"
	        android:text="@string/interviewee_questionaire_list_head_last_modified_time_label"/>
	    
	    <TextView 
	        style="@style/interviewee_questionaire_list_head"
	        android:layout_weight="@string/interviewee_questionaire_list_head_operation_weight"
	        android:text="@string/interviewee_questionaire_list_head_operation_label"/>
	    
    </LinearLayout>
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginTop="10dp">
        
         <View style="@style/list_item_row_seperator"/>
         
	    <ListView 
	        android:id="@+id/lv_interviewee_questionaire_list"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:divider="#808080"
	        android:dividerHeight="1dp">
	        
	    </ListView>
	    
	    <View style="@style/list_item_row_seperator"/>
	    
   	</LinearLayout>
        
</LinearLayout>
